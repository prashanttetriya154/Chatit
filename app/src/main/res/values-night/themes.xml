<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DemoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/bgorang</item>
        <item name="android:statusBarColor">@color/bgorang</item>
    </style>

    <style name="Theme.DemoApp" parent="Base.Theme.DemoApp" />

    <style name="Theme.DemoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DemoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DemoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BottomAnim">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>
</resources>